{
  "name": "@ldesign/event",
  "version": "0.1.0",
  "description": "LDesign 事件系统 - 统一导出 core 和 vue 子包",
  "keywords": [
    "ldesign",
    "event",
    "eventbus",
    "emitter",
    "pubsub",
    "vue",
    "typescript"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs",
      "default": "./es/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "files": [
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "es",
    "lib",
    "dist"
  ],
  "scripts": {
    "build": "ldesign-builder build",
    "build:packages": "pnpm --filter './packages/*' build",
    "dev": "ldesign-builder build --mode development --watch",
    "clean": "rimraf es lib dist"
  },
  "dependencies": {
    "@ldesign/event-core": "workspace:*",
    "@ldesign/event-vue": "workspace:*"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "rimraf": "^5.0.5",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "typings": "./es/index.d.ts",
  "browser": "./dist/index.js"
}